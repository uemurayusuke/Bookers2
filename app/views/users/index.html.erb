<h1>User info</h1>

  <div>
    <p><%= image_tag current_user.get_profile_image(100,100) %></p>
    <p>name:<%= current_user.name %></p>
    <p>introduction:<%= current_user.introduction %></p>
　　<%= link_to "編集", edit_user_path(current_user) %>
  </div>





<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>




<h1>Users</h1>
<% @users.each do |user| %>
  <div>
    <p><%= image_tag user.get_profile_image(100,100) %></p>
    <p><%= user.name %></p>
    <%= link_to "Show", user_path(user.id) %>
  </div>
<% end %>
