<div class="container">
<div class="row">
<div class="col-md-3">
<h1>User info</h1>

  <div>
    <p><%= image_tag current_user.get_profile_image(100,100) %></p>
    <table class="table">
      <tbody>
        <tr>
          <td>name</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
        <td>introduction</td>
        <td><%= current_user.introduction %></td>
        </tr>
      </tbody>
    </table>
　　<%= link_to "編集", edit_user_path(current_user) %>
  </div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>
</div>


<div class="offset-md-1">
</div>


<div class="col-md-8">
<h1>Users</h1>
<table class="table">
  <thead>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>
  </thead>
  <% @users.each do |user| %>
<tbody>
  <tr>
    <td><%= image_tag user.get_profile_image(100,100) %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user.id) %></td>
  </tr>
</tbody>
  <% end %>
</table>
</div>
</div>
</div>