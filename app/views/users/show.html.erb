<div>
  <%= flash[:notice] %>
</div>

<div class="container">
<div class="row">
<div class="col-md-3">

<h1>User info</h1>
  <div>
    <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <table class="table">
      <tbody>
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to edit_user_path(current_user), class: "btn btn-block btn-outline-secondary" do %>
　　<i class="fa-solid fa-user-gear"></i>
　　<% end %>
  </div>


<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>
</div>


<div class="offset-md-1">
</div>

<div class="col-md-8">
<h1>Books</h1>
<table class="table">
  <thead>
  <tr>
    <td></td>
    <td>Title</td>
    <td>Opinion</td>
  </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
  </tr>
  </tbody>
  <% end %>
</table>
</div>