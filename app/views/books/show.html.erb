<h1>User info</h1>
 <div>
    <p><%= image_tag current_user.get_profile_image(100,100) %></p>
    <p>name:<%= current_user.name %></p>
    <p>introduction:<%= current_user.introduction %></p>
　　<%= link_to "編集", edit_user_path(current_user) %>
  </div>


  <h1>New book</h1>
<%= form_with model: @bookss do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h1>Book detail</h1>
  <div>
    <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
    <p><%= link_to @book.user.name, user_path(current_user) %></p>
    <p><%= link_to @book.title, book_path(@book) %></p>
    <p><%= @book.body %></p>
  </div>



<div>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path, method: :delete %>
  <% end %>
</div>