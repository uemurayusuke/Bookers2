<h1>User info</h1>
<% @books.each do |book| %>
  <div>
    <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
    <p>name：<%= book.user.name %></p>
    <p>introduction：<%= book.user.introduction %></p>
    <%= link_to "編集", edit_user_path %>

  </div>
<% end %>





<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>




